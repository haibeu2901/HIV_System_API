<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thông báo</title>
    <link rel="stylesheet" href="notification.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="../userStyle.css">
    <link rel="stylesheet" href="../header/header.css">
</head>
<body>
    <div id="header-placeholder"></div>
    
    <div class="notification-page">
        <div class="notification-container">
            <div class="notification-header">
                <div class="header-content">
                    <h1><i class="fa-solid fa-bell"></i> Notifications</h1>
                    <div class="notification-stats">
                        <span class="total-count">17 <small>TOTAL</small></span>
                        <span class="unread-count">3 <small>UNREAD</small></span>
                        <span class="arv-count">0 <small>ARV REGIMEN</small></span>
                    </div>
                </div>
                <div class="header-actions">
                    <button class="action-btn" onclick="loadNotifications()">
                        <i class="fa-solid fa-refresh"></i> Refresh
                    </button>
                    <button class="action-btn primary" onclick="markAllAsRead()">
                        <i class="fa-solid fa-check"></i> Mark All Read
                    </button>
                </div>
            </div>
            
            <div class="notification-filters">
                <button class="filter-btn active" data-filter="appointment">
                    <i class="fa-solid fa-calendar-check"></i> Appointment Confirmations
                </button>
                <button class="filter-btn" data-filter="arv">
                    <i class="fa-solid fa-pills"></i> ARV Regimen
                </button>
                <button class="filter-btn" data-filter="medical">
                    <i class="fa-solid fa-user-doctor"></i> Medical Updates
                </button>
                <button class="filter-btn" data-filter="system">
                    <i class="fa-solid fa-cog"></i> System Notifications
                </button>
                <button class="filter-btn" data-filter="unread">
                    <i class="fa-solid fa-circle-dot"></i> Unread Only
                </button>
                <button class="filter-btn" data-filter="all">
                    <i class="fa-solid fa-list"></i> All Notifications
                </button>
            </div>
            
            <div id="notification-list" class="notification-list"></div>
        </div>
    </div>
    
    <!-- Token validation guard - Must be first script -->
    <script src="../../shared/token-guard.js"></script>
    <script src="../header/header.js"></script>
    <script src="notification.js"></script>
</body>
</html>
